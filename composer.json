{
    "name": "grantjanecek/openweather",
    "description": "Api to access open weather api",
    "keywords": [
        "grantjanecek",
        "openweather"
    ],
    "homepage": "https://github.com/grantjanecek/openweather",
    "license": "MIT",
    "authors": [
        {
            "name": "Grant Janecek",
            "email": "grantj@fastmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Grantjanecek\\OpenWeather\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grantjanecek\\OpenWeather\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
